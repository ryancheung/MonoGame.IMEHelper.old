  <ItemGroup>
     <PackageReference Include="MonoGame.IMEHelper.Common" Version="0.6.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MonoGame.Framework.WindowsDX.Core" Version="3.8.0.3">
